{
  "extends": "@backstage/cli/config/tsconfig.json",
  "include": [
    "packages/*/src"
    // "plugins/*/src",
    // "plugins/*/dev",
    // "plugins/*/migrations"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "dist-types",
    "rootDir": ".",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  }
}
